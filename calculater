#include <stdio.h>
#include <stdlib.h>

int main () 
{
	char letter; 
	float num1,num2;
	
	printf("what option do u want to do ?  \n \t A)additon \n \t B)substraction \n\t C)multiplictoin  \n\t D) divison \n  " );
	scanf("%c", &letter);
	printf("enter the number : ");
	scanf("%f", &num1);
    printf ("enter the number : ");
	scanf("%f", &num2);
	if (letter == 'A' || letter =='a')
	printf ("the sum of %.2f and %.2f  is %f ", num1,num2,num1+num2);
	else if (letter == 'B' || letter == 'b')
	printf ("the diffrent of %.2f and %.2f  is %f ", num1,num2,num1-num2);
	else if (letter == 'c' || letter == 'c')
	printf ("the product of %.2f and %.2f  is %f ", num1,num2,num1*num2);
	else if (letter == 'D' || letter == 'd')
	printf ("the quotient of %.2f and %.2f  is %f ", num1,num2,num1/num2);
	else 
	printf (" your enter the invalid character ");
	
	return 0;
}
