#include <stdio.h>
int main ()
{
	int x,y,z;
	int *p;
	printf ("enter the number  : \n");
     scanf("%d" , &x);
		printf ("enter the  number : \n");
	     scanf ("%d",&y);
		printf ("enter the  number : \n");
	scanf ("%d", &z);
  p =&x ;
  printf (" the number is %d ", *p );
	p =&y;
  printf (" the number is %d ", *p );
	p =&z ;
